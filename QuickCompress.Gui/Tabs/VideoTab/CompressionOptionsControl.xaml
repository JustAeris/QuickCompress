<UserControl
    x:Class="QuickCompress.Gui.Tabs.VideoTab.CompressionOptionsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://schemas.modernwpf.com/2019"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <GroupBox Header="Compression method">
        <StackPanel>
            <!--  CRF options  -->
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <RadioButton
                        x:Name="CrfCompressionRadioButton"
                        VerticalAlignment="Center"
                        Click="CrfCompressionRadioButton_OnClick"
                        IsChecked="True">
                        CRF Compression
                    </RadioButton>
                    <Button
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Click="CRFHelp_OnClick">
                        <svgc:SvgViewbox
                            MaxHeight="15"
                            Margin="-6,-5"
                            Source="{DynamicResource HelpIcon}"/>
                    </Button>
                </StackPanel>
                <Slider
                    x:Name="CrfSlider"
                    Margin="20,0,0,0"
                    AutoToolTipPlacement="TopLeft"
                    IsSnapToTickEnabled="True"
                    LargeChange="2"
                    Maximum="51"
                    Minimum="0"
                    TickFrequency="1"
                    TickPlacement="BottomRight"
                    Value="23"/>
            </StackPanel>

            <!--  Target size options  -->
            <StackPanel Margin="0,15,0,0" Orientation="Vertical">
                <RadioButton x:Name="TargetFileSizeRadioButton" Click="TargetFileSizeRadioButton_OnClick">Target file size</RadioButton>
                <StackPanel
                    x:Name="TargetFileSizePanel"
                    Margin="20,0,0,0"
                    IsEnabled="False">
                    <RadioButton
                        x:Name="PercentageReductionRadioButton"
                        Click="PercentageReductionRadioButton_OnClick"
                        IsChecked="True">
                        Reduction in percentage
                    </RadioButton>
                    <Slider
                        x:Name="PercentageReductionSlider"
                        AutoToolTipPlacement="TopLeft"
                        LargeChange="5"
                        Maximum="99"
                        Minimum="1"
                        SmallChange="1"
                        TickFrequency="10"
                        TickPlacement="BottomRight"
                        Value="40"/>

                    <StackPanel Orientation="Horizontal">
                        <RadioButton
                            x:Name="FileSizeRadioButton"
                            VerticalAlignment="Center"
                            Click="FileSizeRadioButton_OnClick">
                            Absolute file size
                        </RadioButton>
                        <Button
                            Margin="5,0"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Click="AbsoluteSizeHelp_OnClick">
                            <svgc:SvgViewbox
                                MaxHeight="15"
                                Margin="-6,-5"
                                Source="{DynamicResource HelpIcon}"/>
                        </Button>
                    </StackPanel>
                    <controls:NumberBox
                        x:Name="FileSizeNumberBox"
                        IsEnabled="False"
                        LargeChange="2"
                        Minimum="1"
                        PlaceholderText="Size in MB"
                        SmallChange="1"
                        SpinButtonPlacementMode="Compact"/>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="TwoPassesCheckBox" VerticalAlignment="Center">
                            Apply two passes
                        </CheckBox>
                        <Button
                            Margin="5,0"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Click="TwoPassesHelp_OnClick">
                            <svgc:SvgViewbox
                                MaxHeight="15"
                                Margin="-6,-5"
                                Source="{DynamicResource HelpIcon}"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!--  Speed selection  -->
            <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                <Label VerticalAlignment="Center">Select FFmpeg speed</Label>
                <Button
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Click="SpeedHelp_OnClick">
                    <svgc:SvgViewbox
                        MaxHeight="15"
                        Margin="-6,-5"
                        Source="{DynamicResource HelpIcon}"/>
                </Button>
            </StackPanel>
            <ComboBox
                x:Name="SpeedComboBox"
                HorizontalAlignment="Stretch"
                DisplayMemberPath="Name"/>
        </StackPanel>
    </GroupBox>
</UserControl>
